{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es2017",
    "module": "node16",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules", "**/*.spec.ts" ]
}
